{require_otp_vsn, "R14|R15|R16|17"}.

{eunit_opts, [verbose]}.

{cover_enabled, true}.

{erl_opts, [
  debug_info,
  warn_export_all,
  warn_obsolete_guard,
  %warn_unused_import, %% PropEr causes problems here
  warn_unused_vars,
  warn_shadow_vars,  
  warnings_as_errors
]}.

{deps, [
    {proper, ".*", {git, "https://github.com/manopapad/proper.git", {branch, "master"}}}
    ]}.

{clean_files, ["test/*.beam"]}.
